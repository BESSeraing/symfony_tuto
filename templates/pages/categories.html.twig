{% extends 'layouts/layout.html.twig' %}

{% block content %}
    <section>
        <div class="section-inner">
            <h1 class="text-center mt-4 mb50">Les annonces correspondant à la catégorie {{ category.name }} </h1>
            <div class="container">
                <div class="row">
                    {{ knp_pagination_sortable(advertsPage, 'Title', 'a.title') }}
                    {{ knp_pagination_sortable(advertsPage, 'Price', 'a.price') }}
                    {{ knp_pagination_sortable(advertsPage, 'Date', 'a.creationDate') }}
                </div>
                <div class="row mb50">
                    {% for advert in advertsPage.items %}
                        <div class="col-md-4">
                            <div class="hover-item mb30">
                                {% if advert.gallery.photos | length %}
                                <img src="{{ advert.gallery.photos.first.url }}" class="img-responsive smoothie" alt="">
                                {% endif %}
                                <div class="overlay-item-caption smoothie"></div>
                                <div class="hover-item-caption smoothie">
                                    <div class="vertical-center smoothie">
                                        <a href="{{ url('showAdvert', {slug: advert.slug}) }}" class="smoothie btn btn-primary">View</a>
                                    </div>
                                </div>
                            </div>
                            <div class="item-excerpt">
                                <h4 class="pull-right">{{ advert.price }} €</h4>
                                <h4><a href="{{ url('showAdvert', {slug: advert.slug}) }}">{{ advert.title}}</a></h4>
                                <p>{{ advert.description }}</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="row mb50">
{#                    <div class="btn-group">#}
                    {% for i in 1..advertsPage.totalItemCount/advertsPage.itemNumberPerPage  %}
                        <a href="{{ url(app.request.get('_route'), {'name': app.request.get('name'), 'page' : i })}}" class="page-link btn btn-sm btn-primary {{ i == app.request.get('page') ? 'current' : ''  }}">{{ i }}</a>
                    {% endfor %}
{#                    </div>#}
                </div>
            </div>
        </div>
    </section>
{% endblock content %}
